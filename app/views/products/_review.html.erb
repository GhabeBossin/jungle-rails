<div class="col review-col">

  <ul class="list-group list-group-flush">
    <li class="list-group-item">
        <strong>User review from <%= review.user.fname%>: </strong>
        <% if current_user == review.user %>
        <%= link_to fa_icon('trash'), product_review_path(:review_id => review.id, :id => review.product_id, :product_id => review.product_id), class: 'btn btn-xs btn-danger del-btn', method: :delete %>
        <% end %>
    </li>
    <li class="list-group-item">
      <%= review.description %>
    </li>
    <li class="list-group-item">
      <strong>Rated: </strong>
      <%= review.rating %>/5
    </li>
  </ul>

</div>